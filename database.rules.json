{
  "rules": {
    "messages": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$messageId": {
        ".validate": "newData.hasChildren(['text', 'senderName', 'senderId', 'timestamp'])",
        "text": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 1000"
        },
        "senderName": {
          ".validate": "newData.isString()"
        },
        "senderId": {
          ".validate": "newData.isString() && newData.val() === auth.uid"
        },
        "timestamp": {
          ".validate": "newData.isNumber()"
        }
      }
    },
    "privateMessages": {
      "$chatId": {
        ".read": "auth != null && (root.child('chats').child($chatId).child('participantIds').child(auth.uid).exists() == true)",
        ".write": "auth != null && (root.child('chats').child($chatId).child('participantIds').child(auth.uid).exists() == true)",
        "$messageId": {
          ".validate": "newData.hasChildren(['text', 'senderName', 'senderId', 'timestamp'])",
          "text": {
            ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 1000"
          },
          "senderName": {
            ".validate": "newData.isString()"
          },
          "senderId": {
            ".validate": "newData.isString() && newData.val() === auth.uid"
          },
          "timestamp": {
            ".validate": "newData.isNumber()"
          },
          "chatId": {
            ".validate": "newData.isString()"
          },
          "readBy": {
            ".validate": "newData.hasChildren()"
          }
        }
      }
    },
    "chats": {
      "$chatId": {
        ".read": "auth != null && (data.child('participantIds').child(auth.uid).exists() == true || newData.child('participantIds').child(auth.uid).exists() == true)",
        ".write": "auth != null && (data.child('participantIds').child(auth.uid).exists() == true || newData.child('participantIds').child(auth.uid).exists() == true)",
        "participantIds": {
          ".validate": "newData.hasChildren()"
        },
        "participantNames": {
          ".validate": "newData.hasChildren()"
        },
        "lastMessage": {
          ".validate": "newData.isString()"
        },
        "lastMessageTime": {
          ".validate": "newData.isNumber()"
        },
        "isTyping": {
          ".validate": "newData.hasChildren()"
        },
        "unreadCount": {
          ".validate": "newData.hasChildren()"
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChildren(['uid', 'email', 'displayName'])",
        "uid": {
          ".validate": "newData.isString() && newData.val() === auth.uid"
        },
        "email": {
          ".validate": "newData.isString()"
        },
        "displayName": {
          ".validate": "newData.isString()"
        },
        "fcmToken": {
          ".validate": "newData.isString()"
        }
      }
    }
  }
}
